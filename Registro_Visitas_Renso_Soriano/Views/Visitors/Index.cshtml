@model IEnumerable<Registro_Visitas_Renso_Soriano.Data.Visitors>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">Lista de Visitantes Registrados </h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">Registrar Nuevo Visitante</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">Buscar Visitante</button>
    </form>
    <p></p>
    </div>


<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre Visitante
            </th>
            <th>Apellido Visitante</th>
                        <th>Fecha Ultimo Registro</th>
                                    <th>Herramientas</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Date_Register)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VisitorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VisitorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
