@model IEnumerable<Registro_Visitas_Renso_Soriano.Data.VisitsHistory>

@{
    ViewData["Title"] = "Index";
}


<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">Lista de Visitas Registradas </h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">Registrar Nueva Visita</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">Buscar Visita</button>
    </form>
    <p></p>
    </div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDeparture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDeparture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitors.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitsId"><button class="btn btn-primary" type="submit">Registrar Fecha Salida</button> </a>  
                <a asp-action="Details" asp-route-id="@item.VisitsId">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.VisitsId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
