@model IEnumerable<Registro_Visitas_Renso_Soriano.Data.EventsAssignation>

@{
    ViewData["Title"] = "Index";
}


<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">Lista de Asignacion de Eventos </h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">Registrar Nuevo Asignacion</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">Buscar Visita</button>
    </form>
    <p></p>
    </div>


<p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitors.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Events.EventId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEventsAssignation">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEventsAssignation">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEventsAssignation">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
